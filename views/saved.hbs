<body>
    <nav>
        <h4>Communities and Crime</h4>
        <ul>
            <li><a href="/main">Main</a></li>
            <li><a href="/saved">Saved</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="container mt-4 text-center">
        <div class="row">

            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Territory</th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of kids born to never married">NevrMarr</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of kids in family housing with two parents">2Par</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of population that is caucasian">White</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of population that is african american">Black</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of households with investment / rent income">Wdiv</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of households with public assistance income">PubAsst</span>
                                </th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of population who are divorced">Divorc</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of people under the poverty level">Poor</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percent of vacant housing that is boarded up">VctBoard</span></th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Percentage of people 16 and over, in the labor force, and unemployed">Unemploy</span>
                                </th>
                                <th scope="col"><span class="tt" data-bs-placement="top"
                                        title="Total number of violent crimes per 100K popuation">Result</span></th>
                                <th scope="col">Toggle</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <br></br>

        <div class="row">
            <div class="col-12">
                <h4>Total number of violent crimes per 100K popuation</h4>
                <div id="my_dataviz"></div>
